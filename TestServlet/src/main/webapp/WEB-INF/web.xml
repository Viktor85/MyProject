<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>TestWeb</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <description></description>
        <display-name>DepartmentController</display-name>
        <servlet-name>DepartmentController</servlet-name>
        <servlet-class>com.test.web.controller.DepartmentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentController</servlet-name>
        <url-pattern>/departmentController</url-pattern>
    </servlet-mapping>

    <servlet>
        <description></description>
        <display-name>EmployeeControllerx</display-name>
        <servlet-name>EmployeeControllerx</servlet-name>
        <servlet-class>com.test.web.controller.EmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeControllerx</servlet-name>
        <url-pattern>/employeeController</url-pattern>
    </servlet-mapping>


</web-app>
